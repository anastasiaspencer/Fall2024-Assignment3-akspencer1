@model Fall2024_Assignment3_akspencer1.Models.Movie

<body>

    <div>
        <h1>Edit Movie Page</h1>
        <br />

        @if (Model == null) // If the movie is not found
        {
            <h4>Please enter a valid title to edit.</h4>
            <form asp-action="FindMovie" method="post" class="mb-4">
           
                <div class="form-group">
                    <label for="title">Enter Movie Title to Edit:</label>
                    <input type="text" id="title" name="Title" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Find Movie</button>
            </form>
        }
        else // If the movie is found
        {
            <form asp-action="Edit" method="post" class="mb-4">
                <h4>Edit Movie</h4>
               
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" readonly /> 
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImdbLink"></label>
                    <input asp-for="ImdbLink" class="form-control" />
                    <span asp-validation-for="ImdbLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Genre"></label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="YearOfRelease"></label>
                    <input asp-for="YearOfRelease" class="form-control" />
                    <span asp-validation-for="YearOfRelease" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PosterUrl"></label>
                    <input asp-for="PosterUrl" class="form-control" />
                    <span asp-validation-for="PosterUrl" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        }

        <a asp-action="Index">Back to List</a>
    </div>
</body>
