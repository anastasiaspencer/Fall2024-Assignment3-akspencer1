@model Fall2024_Assignment3_akspencer1.Models.Movie

<form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this movie?');" class="mb-4">
    <h4>Enter Movie Title to Delete</h4>
    <div class="form-group">
        <label for="title">Movie Title</label>
        <input type="text" name="title" class="form-control" placeholder="Enter the title of the movie" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
