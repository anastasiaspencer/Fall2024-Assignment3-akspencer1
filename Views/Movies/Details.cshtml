@model Fall2024_Assignment3_akspencer1.Models.Movie


<head>
    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" href="/wwwroot/css/site.css">
    <script src="/wwwroot/js/site.js"></script>

</head>
<body>

    <div>
        <h1 id="Title"> Movie Details </h1>

        <p id="Summary"> This is the details of the movie.  </p>
        <br /> <br />

       

        <table>
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Poster</th>
                    <th>ImbdLink</th>
                    <th>Genre</th>
                    <th>Year Of Release</th>
                    <th>Actors</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>@Model.Title</td>
                    <td>
                        <img src="@Model.PosterUrl" alt="Poster for @Model.Title" width="100" height="150" />
                    </td>
                    <td>@Model.ImdbLink.</td>
                    <td>@Model.Genre</td>
                    <td>@Model.YearOfRelease</td>
                    <td>
                        @foreach (var actor in Model.Actors)
                        {
                            @actor.Name<br />
                        }
                    </td>

                </tr>
            </tbody>
        </table>

    </div>
</body>
